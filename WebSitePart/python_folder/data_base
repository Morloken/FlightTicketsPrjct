import sqlite3

def init_db():
    conn = sqlite3.connect('aviatickets.db')
    c = conn.cursor()
    c.execute('''CREATE TABLE IF NOT EXISTS users (
                 id INTEGER PRIMARY KEY AUTOINCREMENT,
                 username TEXT NOT NULL,
                 password TEXT NOT NULL,
                 email TEXT NOT NULL)''')
    c.execute('''CREATE TABLE IF NOT EXISTS orders (
                 id INTEGER PRIMARY KEY AUTOINCREMENT,
                 user_id INTEGER NOT NULL,
                 flight_number TEXT NOT NULL,
                 departure TEXT NOT NULL,
                 arrival TEXT NOT NULL,
                 FOREIGN KEY (user_id) REFERENCES users (id))''')
    conn.commit()
    conn.close()

def register_user(username, password, email):
    conn = sqlite3.connect('aviatickets.db')
    c = conn.cursor()
    c.execute("INSERT INTO users (username, password, email) VALUES (?, ?, ?)",
              (username, password, email))
    conn.commit()
    conn.close()

def get_user_orders(user_id):
    conn = sqlite3.connect('aviatickets.db')
    c = conn.cursor()
    c.execute("SELECT * FROM orders WHERE user_id = ?", (user_id,))
    orders = c.fetchall()
    conn.close()
    return orders

def create_order(user_id, flight_number, departure, arrival):
    conn = sqlite3.connect('aviatickets.db')
    c = conn.cursor()
    c.execute("INSERT INTO orders (user_id, flight_number, departure, arrival) VALUES (?, ?, ?, ?)",
              (user_id, flight_number, departure, arrival))
    conn.commit()
    conn.close()
